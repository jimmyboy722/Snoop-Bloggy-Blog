{{!-- The main layout template --}}
<html lang='en'>

  <head>
    <meta charset='utf-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Snoop Bloggy Blog</title>
    <link rel='stylesheet' href='/css/style.css' />
  </head>

  <body class='flex-column min-100-vh'>
    {{!Links based on user's login status}}
    <nav class='navbar'>
      <ul class='flex-row'>
        <li class='li-inline nav-item'><a href='/'>Home</a></li>{{!navigates to home page}}
        <li class='li-inline nav-item'><a href='/dashboard'>Dashboard</a></li>{{!navigates to a user specific dashboard}}
        {{! conditional rendering based on user login status}}
        {{#if loggedIn}}
          <li class='li-inline nav-item'><a href='#' id='logout'>Logout</a></li>
        {{else}}
          <li class='li-inline nav-item'><a href='/login'>Login</a></li>
        {{/if}}
      </ul>
    </nav>
    {{!Conditional rendering, header displays the title based on current view}}
    <header class='hero'>
      {{#if dashboard}}
        <h1 class='app-title'><a href='/dashboard'>Your Dashboard</a></h1>
      {{else}}
        <h1 class='app-title'><a href='/'>The Tech Blog</a></h1>
      {{/if}}
    </header>
    {{! Main content area}}
    <main class='col-auto'>
      {{{body}}}{{! Placeholder content}}
    </main>
    {{! conditional rendering for footer}}
    {{#if dashboard}}
      <footer class='footer flex-row justify-center'>
        <a href='/dashboard/new'>New Post</a>
      </footer>
    {{else}}
      <footer class='flex-row justify-center'>
        &copy; The Tech Blog Folks
      </footer>
    {{/if}}

    {{#if loggedIn}}{{! conditional script tag links to logout.js}}
      <script src='/js/logout.js'></script>
    {{/if}}
  </body>

</html>
