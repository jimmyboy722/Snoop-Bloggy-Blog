{{! View template for login page }}

<div class="card">{{!Container}}
    {{!header}}
    <section class="card-header">
        <h2>Login</h2>
    </section>
    {{! login form }}
    <form id="login-form" class="card-body">
        {{! input fields }}
        <div>
            <label class="form-label" for="username-input-login">Username</label>
            <input type="text" id="username-input-login"/>
        </div>
        <div>
            <label for="password-input-login" class="form-label">Password</label>
            <input type="text" id="password-input-login"/>
        </div>

        {{! submit button }}
        <button class="btn" type="submit" id="login-btn">Login</button>
        <a type="button" href="/signup">Sign Up!</a>

    </form>
</div>
{{!link to login.js}}
<script src="/public/js/login.js"></script>