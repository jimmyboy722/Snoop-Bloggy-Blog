{{! View template for creating a new post }}
<div class="post card">
  <section class="card-header">
    <h2>Make a New Post!</h2>
  </section>
  {{! form for creating a new post }}
  <form id="new-post-form" class="card-body">
    {{! input fields }}
    <label class="form-label" for="post-title">Post Title</label>
    <input type="text" name="post-title" class="form-input" />

    <label class="form-label" for="post-body">Post</label>
    <textarea name="post-body" class="form-input"></textarea>

    {{! submit button }}
    <button type="submit" class="btn">Create Post</button>
  </form>
</div>
{{! link to newPost.js }}
<script src="/js/newPost.js"></script>
